<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroudFriendly"
    android:scrollbars="vertical"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white">

        <SearchView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:clickable="true"
            android:focusable="true"
            android:inputType="text"
            android:layout_weight="1"
            android:queryHint="busca peliculas o series"
            android:searchIcon="@drawable/ic_baseline_search_24" />

        <TextView
            android:id="@+id/name_app"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@color/backgroudFriendly"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="40sp"
            android:layout_weight="16" />

        <ImageView
            android:id="@+id/btnModo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:layout_weight="1"
            android:contentDescription="@string/modooscuro"
            android:focusable="true"
            android:src="@drawable/ic_baseline_dark_mode_24"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_nowplaying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ExpandableListView
            android:id="@+id/filtro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="#0000FF"
            android:dividerHeight="1dp" />
        <ExpandableListView
            android:id="@+id/genero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="#0000FF"
            android:dividerHeight="1dp"/>
    </LinearLayout>


</LinearLayout>